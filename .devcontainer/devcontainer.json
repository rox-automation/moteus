{
    // create a folder to store the extensions across containers
    "initializeCommand": "mkdir -p /var/tmp/container-extensions",
    // "postCreateCommand": "./init_container.sh",
    "build": {
      "dockerfile": "Dockerfile",
      "args": {
        "USER_UID": "${localEnv:USER_UID}",
        "USER_GID": "${localEnv:USER_GID}"
      }
    },
    "runArgs": ["--privileged"],

    "mounts": [
      "source=/var/tmp/container-extensions,target=/home/dev/.vscode-server/extensions,type=bind,consistency=cached"
    ],

    // add workspace to pythonpath
    "containerEnv": {
      "PYTHONPATH": "${containerWorkspaceFolder}/lib/python"
    },



    // Use 'forwardPorts' to make a list of ports inside the container available locally.
    // "forwardPorts": [],


    // Configure tool-specific properties.
    "customizations": {
      "vscode": {
        "extensions": [
          "ms-python.python",
          "ms-python.vscode-pylance",
          "shardulm94.trailing-spaces",
          "njpwerner.autodocstring",
          "mhutchie.git-graph",
          "doi.fileheadercomment",
          "donjayamanne.githistory",
          "charliermarsh.ruff",
          "ms-python.mypy-type-checker"
        ]
      }
    }

  }
